                "example": {
                  "sentence": "[lá].",
                  "translation": "[He/she/it is]."
                },
                "tip": "[He/she/it] is the implied subject. If context demands it, [they] may be the implied subject."
            },
            {
              "type": "grammar",
              "description": "The verb 'lá' is at the center of most sentences in Nóri.",
              "syntax": {
                "highlight": "[interjection]",
                "sentences": [
                  {
                    "phrase": "lá cévo.",
                    "meaning": "He/she/it is a woman"
                  },
                  {
                    "phrase": "symi lá.",
                    "meaning": "A man exists."
                  }
                ]
              }
            },
            {
              "type": "short-response",
              "direction": "foreign-native",
              "prompt": "lá.",
              "answers": ["to be", "he is", "she is", "it is", "they are", "he's", "she's", "it's", "they're", "to exist", "he exists", "she exists", "it exists", "they exist"]
            },
            {
              "type": "short-response",
              "direction": "native-foreign",
              "prompt": "He exists.",
              "answers": ["lá"]
            },
            {
              "type": "vocabulary",
              "word": "miro",
